<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tictactoe.mode"
    android:background="@android:color/holo_orange_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:text="Tic Tac Toe"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_singlePlayer"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="single player"
            android:gravity="center"
            android:onClick="singlePlayer"
            android:padding="10dp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTwoPlayers"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_singlePlayer"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="two players"
            android:onClick="twoPlayers"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

            />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
